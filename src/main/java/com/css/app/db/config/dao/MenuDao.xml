<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.db.config.dao.MenuDao">

	<select id="queryObject" resultType="com.css.app.db.config.entity.Menu">
		select * from DB_MENU where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.db.config.entity.Menu">
		select * from DB_MENU where 1=1
		<if test="menuIds !=null and menuIds.length >0">
			and ID not in
			<foreach item="item" collection="menuIds" open="(" separator="," close=")">
				#{item}
			</foreach>
		</if>
		order by SORT ASC
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DB_MENU 
	</select>
	 
	<insert id="save" parameterType="com.css.app.db.config.entity.Menu">
		insert into DB_MENU
		(
			"ID", 
			"MENU_NAME", 
			"DEFAULT_PAGE", 
			"SORT", 
			"REMARK"
		)
		values
		(
			#{id}, 
			#{menuName}, 
			#{defaultPage}, 
			#{sort}, 
			#{remark}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.db.config.entity.Menu">
		update DB_MENU 
		<set>
			<if test="menuName != null">"MENU_NAME" = #{menuName}, </if>
			<if test="defaultPage != null">"DEFAULT_PAGE" = #{defaultPage}, </if>
			<if test="sort != null">"SORT" = #{sort}, </if>
			<if test="remark != null">"REMARK" = #{remark}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DB_MENU where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from DB_MENU where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>