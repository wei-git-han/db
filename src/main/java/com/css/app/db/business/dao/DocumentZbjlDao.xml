<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.db.business.dao.DocumentZbjlDao">

	<select id="queryObject" resultType="com.css.app.db.business.entity.DocumentZbjl">
		select * from DB_DOCUMENT_ZBJL where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.db.business.entity.DocumentZbjl">
		select * from DB_DOCUMENT_ZBJL where 1=1
		<if test="infoId != null and infoId != ''">
			and INFO_ID=#{infoId}
		</if>
		order by CREATED_TIME
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DB_DOCUMENT_ZBJL 
	</select>
	 
	<insert id="save" parameterType="com.css.app.db.business.entity.DocumentZbjl">
		insert into DB_DOCUMENT_ZBJL
		(
			"ID", 
			"INFO_ID", 
			"USER_ID", 
			"USER_NAME", 
			"DEPT_ID", 
			"DEPT_NAME", 
			"RECEIVER_IDS", 
			"RECEIVER_NAMES", 
			"RECEIVER_DEPT_ID", 
			"RECEIVER_DEPT_NAME", 
			"CREATED_TIME",
			"ORG_NAME"
		)
		values
		(
			#{id}, 
			#{infoId}, 
			#{userId}, 
			#{userName}, 
			#{deptId}, 
			#{deptName}, 
			#{receiverIds}, 
			#{receiverNames}, 
			#{receiverDeptId}, 
			#{receiverDeptName}, 
			#{createdTime},
			#{orgName}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.db.business.entity.DocumentZbjl">
		update DB_DOCUMENT_ZBJL 
		<set>
			<if test="infoId != null">"INFO_ID" = #{infoId}, </if>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="userName != null">"USER_NAME" = #{userName}, </if>
			<if test="deptId != null">"DEPT_ID" = #{deptId}, </if>
			<if test="deptName != null">"DEPT_NAME" = #{deptName}, </if>
			<if test="receiverIds != null">"RECEIVER_IDS" = #{receiverIds}, </if>
			<if test="receiverNames != null">"RECEIVER_NAMES" = #{receiverNames}, </if>
			<if test="receiverDeptId != null">"RECEIVER_DEPT_ID" = #{receiverDeptId}, </if>
			<if test="receiverDeptName != null">"RECEIVER_DEPT_NAME" = #{receiverDeptName}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime},</if>
			<if test="orgName != null">"ORG_NAME" = #{orgName}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DB_DOCUMENT_ZBJL where ID = #{value}
	</delete>
	
	<delete id="deleteByInfoId">
		delete from DB_DOCUMENT_ZBJL where INFO_ID =#{infoId}	
	</delete>
	<delete id="deleteBatch">
		delete from DB_DOCUMENT_ZBJL where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>