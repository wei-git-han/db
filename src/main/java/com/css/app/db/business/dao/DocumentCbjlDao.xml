<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.db.business.dao.DocumentCbjlDao">

	<select id="queryObject" resultType="com.css.app.db.business.entity.DocumentCbjl">
		select * from DB_DOCUMENT_CBJL where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.db.business.entity.DocumentCbjl">
		select * from DB_DOCUMENT_CBJL where 1=1 
		<if test="infoId != null">
			and "INFO_ID" = #{infoId}
		</if>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
		order by CREATED_TIME desc
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DB_DOCUMENT_CBJL 
	</select>
	 
	<insert id="save" parameterType="com.css.app.db.business.entity.DocumentCbjl">
		insert into DB_DOCUMENT_CBJL
		(
			"ID", 
			"INFO_ID", 
			"USER_ID", 
			"USER_NAME", 
			"URGE_CONTENT", 
			"CREATED_TIME", 
			"FINISH_FLAG"
		)
		values
		(
			#{id}, 
			#{infoId}, 
			#{userId}, 
			#{userName}, 
			#{urgeContent}, 
			#{createdTime}, 
			#{finishFlag}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.db.business.entity.DocumentCbjl">
		update DB_DOCUMENT_CBJL 
		<set>
			<if test="infoId != null">"INFO_ID" = #{infoId}, </if>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="userName != null">"USER_NAME" = #{userName}, </if>
			<if test="urgeContent != null">"URGE_CONTENT" = #{urgeContent}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="finishFlag != null">"FINISH_FLAG" = #{finishFlag}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DB_DOCUMENT_CBJL where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from DB_DOCUMENT_CBJL where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>