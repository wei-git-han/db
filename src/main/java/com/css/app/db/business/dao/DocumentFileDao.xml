<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.db.business.dao.DocumentFileDao">

	<select id="queryObject" resultType="com.css.app.db.business.entity.DocumentFile">
		select * from DB_DOCUMENT_FILE where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.db.business.entity.DocumentFile">
		select * from DB_DOCUMENT_FILE where 1=1
		<if test="infoId != null and infoId != ''">
			and DOC_INFO_ID =#{infoId}
		</if>
		order by sort asc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DB_DOCUMENT_FILE 
	</select>
	
	<select id="queryMinSort" resultType="int">
		select  nvl(max(sort)+1,1) from DB_DOCUMENT_FILE where DOC_INFO_ID=#{docInfoId}
	</select>
	 
	<insert id="save" parameterType="com.css.app.db.business.entity.DocumentFile">
		insert into DB_DOCUMENT_FILE
		(
			"ID", 
			"DOC_INFO_ID", 
			"FILE_NAME", 
			"SORT", 
			"CREATED_TIME", 
			"FILE_SERVER_STREAM_ID", 
			"FILE_SERVER_FORMAT_ID"
		)
		values
		(
			#{id}, 
			#{docInfoId}, 
			#{fileName}, 
			#{sort}, 
			#{createdTime}, 
			#{fileServerStreamId}, 
			#{fileServerFormatId}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.db.business.entity.DocumentFile">
		update DB_DOCUMENT_FILE 
		<set>
			<if test="docInfoId != null">"DOC_INFO_ID" = #{docInfoId}, </if>
			<if test="fileName != null">"FILE_NAME" = #{fileName}, </if>
			<if test="sort != null">"SORT" = #{sort}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="fileServerStreamId != null">"FILE_SERVER_STREAM_ID" = #{fileServerStreamId}, </if>
			<if test="fileServerFormatId != null">"FILE_SERVER_FORMAT_ID" = #{fileServerFormatId}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DB_DOCUMENT_FILE where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from DB_DOCUMENT_FILE where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>