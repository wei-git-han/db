<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.db.business.dao.DocumentSzpsDao">

	<select id="queryObject" resultType="com.css.app.db.business.entity.DocumentSzps">
		select * from DB_DOCUMENT_SZPS where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.db.business.entity.DocumentSzps">
		select * from DB_DOCUMENT_SZPS a left join  DB_ROLE_SET b on a.USER_NAME=b.USER_NAME where 1=1 
		<if test="infoId != null and infoId != ''">
			and INFO_ID = #{infoId}
		</if>
		order by b.sort asc,CREATED_TIME asc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DB_DOCUMENT_SZPS 
	</select>
	 
	<insert id="save" parameterType="com.css.app.db.business.entity.DocumentSzps">
		insert into DB_DOCUMENT_SZPS
		(
			"ID", 
			"USER_ID", 
			"USER_NAME", 
			"LEADER_COMMENT", 
			"CREATED_TIME", 
			"INFO_ID"
		)
		values
		(
			#{id}, 
			#{userId}, 
			#{userName}, 
			#{leaderComment}, 
			#{createdTime}, 
			#{infoId}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.db.business.entity.DocumentSzps">
		update DB_DOCUMENT_SZPS 
		<set>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="userName != null">"USER_NAME" = #{userName}, </if>
			<if test="leaderComment != null">"LEADER_COMMENT" = #{leaderComment}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="infoId != null">"INFO_ID" = #{infoId}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DB_DOCUMENT_SZPS where ID = #{value}
	</delete>
	
	<delete id="deleteByInfoId">
		delete from DB_DOCUMENT_SZPS where INFO_ID =#{infoId}	
	</delete>
	
	<delete id="deleteBatch">
		delete from DB_DOCUMENT_SZPS where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>