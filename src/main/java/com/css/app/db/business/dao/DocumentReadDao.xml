<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.db.business.dao.DocumentReadDao">

	<select id="queryObject" resultType="com.css.app.db.business.entity.DocumentRead">
		select * from DB_DOCUMENT_READ where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.db.business.entity.DocumentRead">
		select * from DB_DOCUMENT_READ 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DB_DOCUMENT_READ 
	</select>
	 
	<insert id="save" parameterType="com.css.app.db.business.entity.DocumentRead">
		insert into DB_DOCUMENT_READ
		(
			"ID", 
			"INFO_ID", 
			"SUB_ID", 
			"USER_ID", 
			"USER_NAME", 
			"READ_FLAG"
		)
		values
		(
			#{id}, 
			#{infoId}, 
			#{subId}, 
			#{userId}, 
			#{userName}, 
			#{readFlag}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.db.business.entity.DocumentRead">
		update DB_DOCUMENT_READ 
		<set>
			<if test="infoId != null">"INFO_ID" = #{infoId}, </if>
			<if test="subId != null">"SUB_ID" = #{subId}, </if>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="userName != null">"USER_NAME" = #{userName}, </if>
			<if test="readFlag != null">"READ_FLAG" = #{readFlag}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DB_DOCUMENT_READ where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from DB_DOCUMENT_READ where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>