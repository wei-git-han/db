<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.db.business.dao.ReplyOpinionDao">

	<select id="queryObject" resultType="com.css.app.db.business.entity.ReplyOpinion">
		select * from DB_REPLY_OPINION where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.db.business.entity.ReplyOpinion">
		select * from DB_REPLY_OPINION 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DB_REPLY_OPINION 
	</select>
	 
	<insert id="save" parameterType="com.css.app.db.business.entity.ReplyOpinion">
		insert into DB_REPLY_OPINION
		(
			"ID", 
			"USER_ID", 
			"USER_NAME", 
			"OPINION_CONTENT", 
			"CREATED_TIME", 
			"TRACKING_TYPE", 
			"OP_VERSION"
		)
		values
		(
			#{id}, 
			#{userId}, 
			#{userName}, 
			#{opinionContent}, 
			#{createdTime}, 
			#{trackingType}, 
			#{opVersion}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.db.business.entity.ReplyOpinion">
		update DB_REPLY_OPINION 
		<set>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="userName != null">"USER_NAME" = #{userName}, </if>
			<if test="opinionContent != null">"OPINION_CONTENT" = #{opinionContent}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="trackingType != null">"TRACKING_TYPE" = #{trackingType}, </if>
			<if test="opVersion != null">"OP_VERSION" = #{opVersion}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DB_REPLY_OPINION where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from DB_REPLY_OPINION where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>