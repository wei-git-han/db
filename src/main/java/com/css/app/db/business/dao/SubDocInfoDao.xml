<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.db.business.dao.SubDocInfoDao">

	<select id="queryObject" resultType="com.css.app.db.business.entity.SubDocInfo">
		select * from DB_SUB_DOC_INFO where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.db.business.entity.SubDocInfo">
		select * from DB_SUB_DOC_INFO a 
		inner join DB_DOCUMENT_INFO b on a.INFO_ID=b.ID where 1=1 
		<if test="orgId != null and orgId != ''">
		   and a.SUB_DEPT_ID = #{orgId}
		</if>
		<if test="search != null and search != ''">
			and b.DOC_TITLE like '%'||#{search}||'%'
		</if>
		<if test="docStatus != null and docStatus != ''">
			and a.DOC_STATUS = #{docStatus}
		</if>		
		 	order by a.CREATED_TIME desc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
	<select id="queryPersonList" resultType="com.css.app.db.business.entity.SubDocInfo">
		WITH V_RESULT as(select SUB_ID from 
		(select SUB_ID, row_number() over(partition by SUB_ID order by CREATED_TIME desc) as num
		from DB_SUB_DOC_TRACKING where 1=1 
		<if test="loginUserId !=null and loginUserId !=''">
			and RECEIVER_ID = #{loginUserId}
		</if>)
		where num =1)	
		
		select * from DB_SUB_DOC_INFO a inner join v_result b on a.ID = b.SUB_ID	
		left join DB_DOCUMENT_INFO c on a.INFO_ID=c.ID  where 1=1	
		<if test="search != null and search != ''">
			and c.DOC_TITLE like '%'||#{search}||'%'
		</if>
		<if test="docStatus != null and docStatus != ''">
			and a.DOC_STATUS = #{docStatus}
		</if>		
		 	order by a.CREATED_TIME desc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DB_SUB_DOC_INFO 
	</select>
	 
	<insert id="save" parameterType="com.css.app.db.business.entity.SubDocInfo">
		insert into DB_SUB_DOC_INFO
		(
			"ID", 
			"INFO_ID", 
			"SUB_DEPT_ID", 
			"SUB_DEPT_NAME", 
			"CREATED_TIME", 
			"DOC_STATUS", 
			"REMARK"
		)
		values
		(
			#{id}, 
			#{infoId}, 
			#{subDeptId}, 
			#{subDeptName}, 
			#{createdTime}, 
			#{docStatus}, 
			#{remark}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.db.business.entity.SubDocInfo">
		update DB_SUB_DOC_INFO 
		<set>
			<if test="infoId != null">"INFO_ID" = #{infoId}, </if>
			<if test="subDeptId != null">"SUB_DEPT_ID" = #{subDeptId}, </if>
			<if test="subDeptName != null">"SUB_DEPT_NAME" = #{subDeptName}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="docStatus != null">"DOC_STATUS" = #{docStatus}, </if>
			<if test="remark != null">"REMARK" = #{remark}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DB_SUB_DOC_INFO where ID = #{value}
	</delete>
	
	<delete id="deleteBatch"> 
		delete from DB_SUB_DOC_INFO where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>