<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.db.business.dao.DocumentLsjlDao">

	<select id="queryObject" resultType="com.css.app.db.business.entity.DocumentLsjl">
		select * from DB_DOCUMENT_LSJL where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.db.business.entity.DocumentLsjl">
		select * from DB_DOCUMENT_LSJL 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
	<select id="queryLatestLsjl" resultType="com.css.app.db.business.entity.DocumentLsjl">
		select top 1 * from DB_DOCUMENT_LSJL where INFO_ID= #{infoId} order by CREATED_TIME desc;
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DB_DOCUMENT_LSJL 
	</select>
	 
	<insert id="save" parameterType="com.css.app.db.business.entity.DocumentLsjl">
		insert into DB_DOCUMENT_LSJL
		(
			"ID", 
			"USER_ID", 
			"USER_NAME", 
			"DEPT_ID", 
			"DEPT_NAME", 
			"CREATED_TIME", 
			"CONTENT", 
			"INFO_ID",
			"SUB_ID",
			"SUB_DEPT_NAME"
		)
		values
		(
			#{id}, 
			#{userId}, 
			#{userName}, 
			#{deptId}, 
			#{deptName}, 
			#{createdTime}, 
			#{content}, 
			#{infoId},
			#{subId},
			#{subDeptName}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.db.business.entity.DocumentLsjl">
		update DB_DOCUMENT_LSJL 
		<set>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="userName != null">"USER_NAME" = #{userName}, </if>
			<if test="deptId != null">"DEPT_ID" = #{deptId}, </if>
			<if test="deptName != null">"DEPT_NAME" = #{deptName}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="content != null">"CONTENT" = #{content}, </if>
			<if test="infoId != null">"INFO_ID" = #{infoId},</if>
			<if test="subId != null">"SUB_ID" = #{subId},</if>
			<if test="subDeptName != null">"SUB_DEPT_NAME" = #{subDeptName}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DB_DOCUMENT_LSJL where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from DB_DOCUMENT_LSJL where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>