<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.db.business.dao.OpinionAttacDao">

	<select id="queryObject" resultType="com.css.app.db.business.entity.OpinionAttac">
		select * from DB_OPINION_ATTAC where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.db.business.entity.OpinionAttac">
		select * from DB_OPINION_ATTAC 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DB_OPINION_ATTAC 
	</select>
	 
	<insert id="save" parameterType="com.css.app.db.business.entity.OpinionAttac">
		insert into DB_OPINION_ATTAC
		(
			"ID", 
			"OPINION_ID", 
			"FILE_NAME", 
			"FILE_SERVER_ID", 
			"CREATED_TIME", 
			"SORT"
		)
		values
		(
			#{id}, 
			#{opinionId}, 
			#{fileName}, 
			#{fileServerId}, 
			#{createdTime}, 
			#{sort}
		)
	</insert>
	 
	<update id="update" parameterType="com.css.app.db.business.entity.OpinionAttac">
		update DB_OPINION_ATTAC 
		<set>
			<if test="opinionId != null">"OPINION_ID" = #{opinionId}, </if>
			<if test="fileName != null">"FILE_NAME" = #{fileName}, </if>
			<if test="fileServerId != null">"FILE_SERVER_ID" = #{fileServerId}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="sort != null">"SORT" = #{sort}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DB_OPINION_ATTAC where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from DB_OPINION_ATTAC where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>