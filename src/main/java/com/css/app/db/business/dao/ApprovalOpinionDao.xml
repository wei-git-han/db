<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.db.business.dao.ApprovalOpinionDao">

	<select id="queryObject" resultType="com.css.app.db.business.entity.ApprovalOpinion">
		select * from DB_APPROVAL_OPINION where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.db.business.entity.ApprovalOpinion">
		select * from DB_APPROVAL_OPINION where 1=1
		<if test="userId != null and userId != ''">
			and USER_ID= #{userId}
		</if>
		<if test="noUser != null and noUser != ''">
			and USER_ID != #{noUser}
		</if>
		<if test="subId != null and subId != ''">
			and SUB_ID= #{subId}
		</if>
		<if test="showFlag != null and showFlag != ''">
			and SHOW_FLAG= #{showFlag}
		</if>
		<if test="teamId != null and teamId != ''">
			and REPLY_TEAM_ID= #{teamId}
		</if>
		order by CREATED_TIME
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DB_APPROVAL_OPINION 
	</select>
	 
	<insert id="save" parameterType="com.css.app.db.business.entity.ApprovalOpinion">
		insert into DB_APPROVAL_OPINION
		(
			"ID", 
			"USER_ID", 
			"USER_NAME", 
			"OPINION_CONTENT", 
			"CREATED_TIME", 
			"SUB_ID", 
			"SHOW_FLAG",
			"TRACKING_TYPE",
			"REPLY_TEAM_ID"
		)
		values
		(
			#{id}, 
			#{userId}, 
			#{userName}, 
			#{opinionContent}, 
			#{createdTime}, 
			#{subId}, 
			#{showFlag},
			#{trackingType},
			#{replyTeamId}
		)
	</insert>
	<update id="updateShowFlag">
		update DB_APPROVAL_OPINION set SHOW_FLAG='1' where SUB_ID=#{subId}
	</update>
	<update id="update" parameterType="com.css.app.db.business.entity.ApprovalOpinion">
		update DB_APPROVAL_OPINION 
		<set>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="userName != null">"USER_NAME" = #{userName}, </if>
			<if test="opinionContent != null">"OPINION_CONTENT" = #{opinionContent}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="subId != null">"SUB_ID" = #{subId}, </if>
			<if test="showFlag != null">"SHOW_FLAG" = #{showFlag},</if>
			<if test="trackingType != null">"TRACKING_TYPE" = #{trackingType}, </if>
			<if test="replyTeamId != null">"REPLY_TEAM_ID" = #{replyTeamId} </if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DB_APPROVAL_OPINION where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from DB_APPROVAL_OPINION where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>