<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.css.app.db.business.dao.ReplyExplainDao">

	<select id="queryObject" resultType="com.css.app.db.business.entity.ReplyExplain">
		select * from DB_REPLY_EXPLAIN where ID = #{value}
	</select>

	<select id="queryList" resultType="com.css.app.db.business.entity.ReplyExplain">
		select * from DB_REPLY_EXPLAIN where 1=1
		<if test="userId != null and userId != ''">
			and USER_ID= #{userId}
		</if>
		<if test="subId != null and subId != ''">
			and SUB_ID= #{subId}
		</if>
		<if test="infoId != null and infoId != ''">
			and INFO_ID= #{infoId}
		</if>
		<if test="showFlag != null and showFlag != ''">
			and SHOW_FLAG= #{showFlag}
		</if>
		<if test="subDeptId != null and subDeptId != ''">
			and SUB_DEPT_ID= #{subDeptId}
		</if>
		<if test="teamId != null and teamId != ''">
			and TEAM_ID= #{teamId}
		</if>
		<if test="version != null and version != ''">
			and RE_VERSION= #{version}
		</if>
			order by CREATED_TIME
		<choose>
			<when test="sort == 'asc'">ASC</when>
			<otherwise>DESC</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from DB_REPLY_EXPLAIN 
	</select>
	<!-- 查询所有分支局的最新一条反馈 -->
	<select id="queryAllLatestOneReply" resultType="com.css.app.db.business.entity.ReplyExplain">
		select * from (select *, row_number() over(partition by SUB_ID order by CREATED_TIME desc) as num from DB_REPLY_EXPLAIN where INFO_ID=#{infoId} and SHOW_FLAG='1') where num=1
	</select>
	<!-- 查询所有分支局的反馈 -->
	<select id="queryAllLatestReply" resultType="com.css.app.db.business.entity.ReplyExplain">
	select * from(
	select *,row_number() over(partition by sub_id,team_id order by created_time desc) as num from DB_REPLY_EXPLAIN where info_id = #{infoId} and show_flag='1'
	)where num = '1' order by CREATED_TIME desc;
	</select>
	<!-- 查询某分支局的反馈 -->
	<select id="querySubLatestReply" resultType="com.css.app.db.business.entity.ReplyExplain">
	select * from(
	select *,row_number() over(partition by team_id order by created_time desc) as num from DB_REPLY_EXPLAIN where info_id = #{0} and sub_id = #{1}
	)where num = '1' order by CREATED_TIME desc;
	</select>
	<!-- 获取临时反馈 -->
	<select id="queryLastestTempReply" resultType="com.css.app.db.business.entity.ReplyExplain">
		select top 1 * from DB_REPLY_EXPLAIN where RE_VERSION = 0
		<if test="userId != null and userId != ''">
			and USER_ID= #{userId}
		</if>
		<if test="subId != null and subId != ''">
			and SUB_ID= #{subId}
		</if>
		<if test="showFlag != null and showFlag != ''">
			and SHOW_FLAG= #{showFlag}
		</if>
		<if test="subDeptId != null and subDeptId != ''">
			and SUB_DEPT_ID= #{subDeptId}
		</if>
		<if test="teamId != null and teamId != ''">
			and TEAM_ID= #{teamId}
		</if>
		order by CREATED_TIME desc
	</select>
	 
	<insert id="save" parameterType="com.css.app.db.business.entity.ReplyExplain">
		insert into DB_REPLY_EXPLAIN
		(
			"ID", 
			"USER_ID", 
			"USER_NAME", 
			"REPLY_CONTENT", 
			"CREATED_TIME", 
			"INFO_ID", 
			"SUB_ID", 
			"SHOW_FLAG",
			"SUB_DEPT_ID", 
			"SUB_DEPT_NAME",
			"TEAM_ID",
			"RE_VERSION"
		)
		values
		(
			#{id}, 
			#{userId}, 
			#{userName}, 
			#{replyContent}, 
			#{createdTime}, 
			#{infoId}, 
			#{subId}, 
			#{showFlag},
			#{subDeptId}, 
			#{subDeptName},
			#{teamId}, 
			#{reVersion}
		)
	</insert>
	<update id="updateShowFlag">
		update DB_REPLY_EXPLAIN set SHOW_FLAG='1' where SUB_ID=#{subId}
	</update>
	<update id="update" parameterType="com.css.app.db.business.entity.ReplyExplain">
		update DB_REPLY_EXPLAIN 
		<set>
			<if test="userId != null">"USER_ID" = #{userId}, </if>
			<if test="userName != null">"USER_NAME" = #{userName}, </if>
			<if test="replyContent != null">"REPLY_CONTENT" = #{replyContent}, </if>
			<if test="createdTime != null">"CREATED_TIME" = #{createdTime}, </if>
			<if test="infoId != null">"INFO_ID" = #{infoId}, </if>
			<if test="subId != null">"SUB_ID" = #{subId}, </if>
			<if test="showFlag != null">"SHOW_FLAG" = #{showFlag},</if>
			<if test="subDeptId != null">"SUB_DEPT_ID" = #{subDeptId}, </if>
			<if test="subDeptName != null">"SUB_DEPT_NAME" = #{subDeptName}, </if>
			<if test="teamId != null">"TEAM_ID" = #{teamId}, </if>
			<if test="reVersion != null">"RE_VERSION" = #{reVersion} </if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from DB_REPLY_EXPLAIN where ID = #{value}
	</delete>
	
	<delete id="deleteBySubId">
		delete from DB_REPLY_EXPLAIN where SUB_ID = #{subId}
	</delete>
	
	<delete id="deleteBatch">
		delete from DB_REPLY_EXPLAIN where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>